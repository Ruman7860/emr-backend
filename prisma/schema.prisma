generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(STAFF)
  name      String?
  createdAt DateTime @default(now())
}

model Patient {
  id            Int      @id @default(autoincrement())
  name          String
  medicalHistory String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Inventory {
  id        Int      @id @default(autoincrement())
  itemName  String
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  DOCTOR
  STAFF
}